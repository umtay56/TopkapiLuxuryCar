<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #2c3e50; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VehicleDetailController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Vehicle Details" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <TextArea fx:id="txtDetails" editable="false" prefHeight="300.0" prefWidth="300.0" wrapText="true" style="-fx-font-size: 14px;">
            <font>
                <Font name="Monospaced Regular" size="14.0" />
            </font>
        </TextArea>

        <Button mnemonicParsing="false" onAction="#closeWindow" prefWidth="100.0" style="-fx-background-color: #c0392b; -fx-text-fill: white;" text="Close" />
    </children>
</VBox>